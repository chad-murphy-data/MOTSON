# MOTSON v2 Environment Variables
# Copy this to .env and fill in your values

# Required: Get your free API key from https://www.football-data.org/client/register
FOOTBALL_DATA_API_KEY=your_api_key_here

# Optional: Database path (defaults to motson.db in current directory)
DATABASE_URL=sqlite:///motson.db

# Optional: Enable debug mode
DEBUG=false
